    <section class="ftco-section">
			<div class="container">
				<div class="row">
					<div class="col-md-9 properties-single">
						<div class="col-md-3 align-self-end ftco-animate">
							<div class="form-group">
								<div class="form-field">
							<a href = "/properties"><input type="button" value="Back" class="form-control btn btn-primary"></a>
						  </div>
					  </div>
					  <br>
						</div>
      			<div class="single-slider owl-carousel">
      				<div class="item">
						  <!-- <div class="properties-img" style="background-image: url();"></div> -->
						  <img src= <%= property[0][0].Image_path %> >

      				</div>
      				<div class="item">
      					<div class="properties-img" style="background-image: url(images/work-2.jpg);"></div>
      				</div>
      				<div class="item">
      					<div class="properties-img" style="background-image: url(images/work-3.jpg);"></div>
      				</div>
      			</div>
        		<div class="col-md-12 Properties-single mt-4 mb-5 ftco-animate">
        			<h2><%= property[0][0]["Residence_Name"] %></h2>
        			<p class="rate mb-4">
        				<span class="loc"><a href="#"><i class="icon-map"></i><%= property[0]["Address"] %></a></span>
  						</p>
						  <p><%= property[0][0]["Residence_Des"] %></p>
						  <h4 style="margin-bottom: -30px; margin-top: 30px;">Amenities:</h4>
  						<div class="d-md-flex mt-5 mb-5">
  							<ul>  
								<% property[1].forEach(function(i){ %>
									<li><span><strong><emp><%= i.Gen_Type %></emp></strong></span></li>
								<% })  %>
    						</ul>
						  </div>
						  <h4 style="margin-bottom: -30px; margin-top: 30px;">Contact Details:</h4>
						  <div class="d-md-flex mt-5 mb-5">
							<ul>  
								<li><span><strong>Email: </strong><%= property[2][0]["Email"] %></span></li>
								<li><span><strong>Contact Number: </strong><%= property[2][0]["Ph_no"] %></span></li>
						  </ul>
						</div>
        		</div>

        		<div class="col-md-12 properties-single ftco-animate mb-5 mt-4">
        			<h4 class="mb-4">Reviews</h4>
        			<!-- <div class="row">
        				<div class="col-md-6">
        					<form method="post" class="star-rating">
									  <div class="form-check">
											<label class="form-check-label" for="exampleCheck1">
												<p class="rate">Average Rating:  <i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i><i class="icon-star"></i></p>
											</label>
									  </div>
						</form>
        				</div>
					</div> -->
					<div class="row">
						<div class="col-md-9">
							<%property[3].forEach(function(i){%>
								<div style="color: black;"><strong> <%= i.Fname %> <%= i.Lname %></strong></div><p><%=i.Review_Content%></p>
							<%})%>
							<!-- <div style="color: black;"><strong>John Doe: </strong></div><p>It is a nice hostel.</p>
							<div style="color: black;"><strong>Angela Martin: </strong></div><p>It is a nice hostel.</p> -->
							<!-- <div><a href="#">Read all Reviews..</a></div><br> -->
							<form action="/<%= property[0][0].Residence_ID %>/create"  method="POST">
								<!-- <input type="text" name="name" placeholder="Name" style="margin-bottom: 10px; width:490px;" autocomplete="off"> -->
								<textarea placeholder="Write a review..." cols="50" rows="3" name=rev></textarea>
								<div class="col-md-3 align-self-end ftco-animate">
								<input type="submit" value="Submit" class="form-control btn btn-primary">
							</form>
							
							</div>
						</div>
					</div>
        		</div>
		    	</div>
	    	</div>
			</div>
